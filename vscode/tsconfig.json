{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "outDir": "out",
    "rootDir": "src",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "types": ["vscode", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "out", "webview"]
}
